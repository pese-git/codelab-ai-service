# Общие настройки для Docker Compose
# Варианты: development, staging, production
ENVIRONMENT=development

# Порты сервисов
NGINX_PORT=80
GATEWAY_PORT=8000
AGENT_RUNTIME_PORT=8001
LLM_PROXY_PORT=8002
AUTH_SERVICE_PORT=8003

# Настройки healthcheck для всех сервисов
HEALTHCHECK_INTERVAL=30s
HEALTHCHECK_TIMEOUT=10s
HEALTHCHECK_RETRIES=3
HEALTHCHECK_START_PERIOD=5s

# Gateway Service настройки
GATEWAY__INTERNAL_API_KEY=change-me-in-production
GATEWAY__LOG_LEVEL=DEBUG
GATEWAY__WS_HEARTBEAT_INTERVAL=30
GATEWAY__WS_CLOSE_TIMEOUT=10
GATEWAY__MAX_CONCURRENT_REQUESTS=100
GATEWAY__REQUEST_TIMEOUT=30
GATEWAY__USE_JWT_AUTH=false

# Agent Runtime Service настройки
AGENT_RUNTIME__INTERNAL_API_KEY=change-me-in-production
AGENT_RUNTIME__LOG_LEVEL=DEBUG
AGENT_RUNTIME__MAX_CONCURRENT_REQUESTS=100
AGENT_RUNTIME__REQUEST_TIMEOUT=30
AGENT_RUNTIME__LLM_MODEL=Qwen/Qwen3-0.6B
# Multi-Agent mode: true for multi-agent (default), false for single-agent (UniversalAgent)
AGENT_RUNTIME__MULTI_AGENT_MODE=true
# Event-Driven Architecture (Phase 3) - контроль миграции
AGENT_RUNTIME__USE_EVENT_DRIVEN_CONTEXT=true
AGENT_RUNTIME__USE_EVENT_DRIVEN_PERSISTENCE=false

# LLM Proxy Service настройки
LLM_PROXY__INTERNAL_API_KEY=change-me-in-production
LLM_PROXY__LOG_LEVEL=DEBUG
LLM_PROXY__MAX_CONCURRENT_REQUESTS=100
LLM_PROXY__REQUEST_TIMEOUT=30
LLM_PROXY__LLM_MODE=litellm  # litellm | mock
LLM_PROXY__DEFAULT_MODEL=gpt-3.5-turbo

# LiteLLM Proxy настройки
LITELLM_MASTER_KEY=sk-1234

# API ключи для LiteLLM Proxy (передаются в litellm-proxy контейнер)
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
AZURE_API_KEY=your-azure-key-here
AZURE_API_BASE=https://your-resource.openai.azure.com/
AZURE_API_VERSION=2024-02-15-preview
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-key-here

# Auth Service настройки
AUTH_SERVICE__LOG_LEVEL=DEBUG
AUTH_SERVICE__ENABLE_RATE_LIMITING=false
AUTH_SERVICE__MASTER_KEY=<your key>
# Database: SQLite для разработки, PostgreSQL для production
# AUTH_SERVICE__DB_URL=sqlite:///data/auth.db
AUTH_SERVICE__DB_URL=postgresql+asyncpg://codelab:codelab_password@postgres:5432/auth_db