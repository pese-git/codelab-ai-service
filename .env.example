# Общие настройки
# Варианты: development, staging, production
ENVIRONMENT=development

# Порты сервисов
GATEWAY_PORT=8000
AGENT_RUNTIME_PORT=8001
LLM_PROXY_PORT=8002

# URLs сервисов (для внутреннего взаимодействия)
# В Docker используются имена сервисов из docker-compose
AGENT_SERVICE_URL=http://agent-runtime:8001
LLM_PROXY_URL=http://llm-proxy:8002

# Настройки LLM провайдеров
# Получите ключи на https://platform.openai.com и https://console.anthropic.com
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

VLLM_API_KEY=""

# Настройки логирования
# Варианты: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=DEBUG

# Настройки безопасности
# Измените на сложный ключ в production
INTERNAL_API_KEY=internal-service-key

# Настройки healthcheck
# Интервалы в формате Docker duration
HEALTHCHECK_INTERVAL=30s
HEALTHCHECK_TIMEOUT=10s
HEALTHCHECK_RETRIES=3
HEALTHCHECK_START_PERIOD=5s

# Настройки WebSocket
# Значения в секундах
WS_HEARTBEAT_INTERVAL=30
WS_CLOSE_TIMEOUT=10

# Настройки кеширования и производительности
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
